                                                                value='<%= project.id %>' />
                                                            <div class="validation"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="jdlproject"
                                                                id="jdlproject" placeholder="Judul Project"
                                                                data-msg="Please enter at least 8 chars of subject"
                                                                required value='<%= project.jdlproject %>' />
                                                            <div class="validation"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="keterangan"
                                                                id="keterangan" placeholder="Keterangan"
                                                                data-rule="keterangan"
                                                                data-msg="Please enter at least 8 chars of subject"
                                                                required value='<%= project.keterangan %>' />
                                                            <div class="validation"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="text" class="form-control" name="password"
                                                                id="keterangan" placeholder="password" required
                                                                value='<%= project.password %>' />
                                                            <div class="validation"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12 mb-3">
                                                        <div class="form-group">
                                                            <input type="file" class="form-control" name="image"
                                                                id="image" placeholder="Gambar" required />
                                                            <div class="validation"></div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <button type="submit"
                                                            class="button button-a button-big button-rouded">Send
                                                            Data</button>

                                                    </div>

                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="title-box-2 pt-4 pt-md-0">
